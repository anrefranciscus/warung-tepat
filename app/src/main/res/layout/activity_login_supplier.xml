<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutTop"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    tools:context=".activities.LoginSupplier">

    <ImageView
        android:id="@+id/logoWarungTepat"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_warung_tepat" />

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logoWarungTepat"
        android:text="Login Supplier"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textTitle"
        android:text="Warung Tepat"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textSubtitle"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="5dp"
        android:text="Masukan nomor handphone anda" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_input_nomortelp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textDesc"
        android:layout_marginBottom="20dp"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputNomorTelp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/editext_custom"
            android:inputType="text"
            android:padding="15sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/labelPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_input_nomortelp"

        android:text="Masukan nomor handphone anda" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_input_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/labelPassword"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:hintEnabled="false"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/editext_custom"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="15sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_masuk"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/layout_input_password"
        android:background="@drawable/btn_custom"
        android:onClick="@{(v) -> LoginViewModel.onClick(v) }"
        android:text="Masuk" />

    <TextView
        android:id="@+id/text_lupa_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_masuk"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Lupa password" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/text_lupa_password"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_btpn_syariah" />

</RelativeLayout>